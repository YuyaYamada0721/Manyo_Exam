<div>
  管理画面：ユーザー一覧
</div>

  <table class="table">
    <tr>
      <th>ID</th>
      <th>ユーザー名</th>
      <th>タスクの数</th>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.user_name %></td>
      <td><%= user.task_ids.count %></td>
      <td><%= link_to '詳細', user, class: "btn btn-info" %></td>
      <td><%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-success"  %></td>
      <td><%= link_to '削除', user, method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </table>
