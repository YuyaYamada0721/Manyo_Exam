<!DOCTYPE html>
<html>
  <head>
    <title>Taskun</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <header>
        <div class="row">
          <div class="col span-12">
            <div class="head">
              <h1><%= link_to "Taskun", root_path %></h1>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col span-12">
            <nav>
              <div id="navi">
                <ul>
                  <% if logged_in? %>
                    <li><%= link_to "マイページ", user_path(current_user.id), class: 'btn btn-info' %></li>
                    <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: 'btn btn-info' %></li>
                  <% else %>
                    <li><%= link_to "新規登録", new_user_path, class: 'btn btn-info' %></li>
                    <li><%= link_to "ログイン", new_session_path, class: 'btn btn-info' %></li>
                  <% end %>
                </ul>
              </div>
            </nav>
          </div>
        </div>
      </header>

      <% flash.each do |key, value| %>
        <% if key == 'alert' || key == 'danger' %>
          <%= content_tag(:div, value, class: "alert-danger #{key}") %>
        <% else %>
          <%= content_tag(:div, value, class: "alert-info #{key}") %>
        <% end %>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
