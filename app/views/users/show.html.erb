<h1><%= @user.user_name %>のページ</h1>
<p>メールアドレス: <%= @user.user_email %></p>

<p><strong>タスク一覧</strong></p>
<% @tasks.each do |task| %>
  <table class="table">
    <tr>
      <th>タスク</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
    </tr>
    <tr>
      <td><%= task.task_name %></td>
      <td><%= task.task_content %></td>
      <td><%= task.expiration_deadline %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
    </tr>
  </table>
<% end %>

<%= link_to 'タスク管理へ', tasks_path, class: "btn btn-default"%>
