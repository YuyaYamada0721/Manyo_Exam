<h1>タスク一覧画面</h1>

<%= form_with( model: Task.new , url: tasks_path, method: :get, local: true) do |form| %>
  <%= form.label :タスク名 %>
  <%= form.text_field :task_name %>
  <%= form.label :ステータス %>
  <%= form.select :status, Task.statuses.keys, include_blank: true %>
  <%= form.submit '検索' %>
<% end %>

<%= link_to '新規タスク登録', new_task_path %>
<%= link_to '終了期限でソートする', tasks_path( sort_expired: "true" ) %>

<table>
  <tr>
    <th>タスク</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td class="task_row"><%= task.task_name %></td>
    <td><%= task.task_content %></td>
    <td><%= task.expiration_deadline %></td>
    <td><%= task.status %></td>
    <td><%= link_to '詳細', task %></td>
    <td><%= link_to '編集', edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task, method: :delete %></td>
  </tr>
<% end %>
</table>
