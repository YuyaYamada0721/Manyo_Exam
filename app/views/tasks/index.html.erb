<h1>タスク一覧画面</h1>
<%= link_to '新規タスク登録', new_task_path %>
  <table>
    <tr>
      <th>タスク</th>
      <th>内容</th>
    </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task_name %></td>
      <td><%= task.task_content %></td>
      <td><%= link_to '詳細', task %></td>
      <td><%= link_to '編集', edit_task_path(task.id) %></td>
      <td><%= link_to '削除', task, method: :delete %></td>
    </tr>
  <% end %>
  </table>
