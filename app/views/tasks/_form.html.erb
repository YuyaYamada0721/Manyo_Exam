<%= form_with(model: @task, local: true) do |form| %>

  <% if @task.errors.any? %>
    <div id = "error_explanation">
      <h1><%= @task.errors.count %>件のエラーがあります。</h1>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<form>

  <div class = "name-field form-group">
    <%= form.label :タスク %><br>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class = "content-field form-group">
    <%= form.label :タスク内容 %><br>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class = "expiration_deadline-field form-group">
    <%= form.label :終了期限 %><br>
    <%= form.date_field :expiration_deadline %>
  </div><br>

  <div class = "status-field form-group">
    <%= form.label :ステータス %><br>
    <%= form.select :status, options_for_select(Task.statuses) %>
  </div>

  <div class = "status-field form-group">
    <%= form.label :優先順位 %><br>
    <%= form.select :priority, options_for_select(Task.priorities) %>
  </div>

  <div class= "label-field form-group">
    <%= form.label :ラベル： %>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :label_name) %>
  </div><br>

  <%= form.submit 'タスク登録' , class: "btn btn-default" %>
</form><br>

<% end %>
